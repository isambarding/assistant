    inputNewNoteTitle: inputNewNoteTitle
    inputNewNoteContent: inputNewNoteContent

    BoxLayout:
        GridLayout:
            cols: 2
            Label:
                id: lblNewNoteTitle
                text: "Title:"
            TextInput:
                id: inputNewNoteTitle

        Label:
            id: lblNewNoteTitle
            text: "Content:"
        TextInput:
            id: inputNewNoteContent
            multiline: True
        Button:
            id: btnCreateNote
            text: "Create"
            on_press: root.createNote()
        Button:
            id: btnBack
            text: "Discard"
            on_press: app.root.current = "notes"

