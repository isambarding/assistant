<NotesScreen>
    name: "notes"

    BoxLayout:
        Label:
            id: lblLastNoteTitle
            text: "Most recent note title"
        Label:
            id: lblLastNoteContent
            text: "Most recent note content"
        Button:
            id: btnNewNote
            text: "New note"
            on_press: root.newNote()
        GridLayout:
            cols: 2
            Button:
                id: btnAllNotes
                text: "Notes by time"
                on_press: root.notesByTime()
            Button:
                id: btnAllNotes
                text: "Notes by title"
                on_press: root.notesByTitle()
        Button:
            id: btnBack
            text: "Back"
            on_press: app.root.current = "home"

