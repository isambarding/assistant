<HomeScreen>
    name: "home"

    BoxLayout:
        Label:
            id: lblName
            text: root.lblName
        Button:
            id: btnWeather
            text: "Weather"
            on_press: app.root.current = "weather"
        Button:
            id: btnTwitter
            text:"Twitter"
            on_press: app.root.current = "twitter"
        Button:
            id: btnNotes
            text:"Notes"
            on_press: app.root.current = "notes"
        Button:
            id: btnReminders
            text:"Reminders"
            on_press: app.root.current = "reminders"
        Button:
            id: btnAlarms
            text:"Alarms"
            on_press: app.root.current = "alarms"
        Button:
            id: btnSettings
            text:"Settings"
            on_press: app.root.current = "settings"

<WeatherScreen>
    name: "weather"
    inputCity: inputCity
    inputCountry: inputCountry

    BoxLayout:
        Label:
            id: lblLocation
            text: root.latestLocation
        Label:
            id: lblWeatherText
            text_size: self.size
            text: root.latestWeatherText

        GridLayout:
            cols: 2
            Label:
                text: "High:"
                halign: "right"
            Label:
                id: lblWeatherHigh
                halign: "left"
                text: root.latestWeatherHigh
            Label:
                text: "Low:"
                halign: "right"
            Label:
                id: lblWeatherLow
                halign: "left"
                text: root.latestWeatherLow

        GridLayout:
            cols: 2
            Label:
                text: "Country:"
            TextInput:
                id: inputCountry
            Label:
                text: "City:"
            TextInput:
                id: inputCity

        Button:
            id: btnUpdateLocation
            text: "Get weather"
            on_press: root.getMoreWeather()
        Button:
            id: btnBack
            text: "Back"
            on_press: app.root.current = "home"

