MyScreenManager:
    HomeScreen:
    WeatherScreen:
    MoreWeatherScreen:
    TwitterScreen:
    NotesScreen:
    RemindersScreen:
    AlarmsScreen:
    SettingsScreen:

<HomeScreen>
    name: "home"

    BoxLayout:
        Label:
            id: labelName
            text: root.labelName
        Button:
            id: buttonWeather
            text: "Weather"
            on_press: app.root.current = "weather"
        Button:
            id: buttonTwitter
            text:"Twitter"
            on_press: app.root.current = "twitter"
        Button:
            id: buttonNotes
            text:"Notes"
            on_press: app.root.current = "notes"
        Button:
            id: buttonReminders
            text:"Reminders"
            on_press: app.root.current = "reminders"
        Button:
            id: buttonAlarms
            text:"Alarms"
            on_press: app.root.current = "alarms"
        Button:
            id: buttonSettings
            text:"Settings"
            on_press: app.root.current = "settings"

<WeatherScreen>
    name: "weather"

    BoxLayout:
        Label:
            id: labelLocation
            text: root.labelLocation
        Label:
            id: labelWeatherText
            text_size: self.size
            text: root.labelWeatherText

        GridLayout:
            cols: 2
            Label:
                text: "High:"
                halign: "right"
            Label:
                id: labelWeatherHigh
                halign: "left"
                text: root.labelWeatherHigh
            Label:
                text: "Low:"
                halign: "right"
            Label:
                id: labelWeatherLow
                halign: "left"
                text: root.labelWeatherLow

        GridLayout:
            cols: 2
            Label:
                text: "Country:"
            TextInput:
                id: inputCountry
                text: root.inputCountry
            Label:
                text: "City:"
            TextInput:
                id: inputCity
                text: root.inputCity

        Button:
            id: buttonUpdateLocation
            text: "Get weather"
            on_press: app.root.current = "moreweather"
        Button:
            id: buttonBack
            text: "Back"
            on_press: app.root.current = "home"

