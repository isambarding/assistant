MyScreenManager:
    HomeScreen:
    WeatherScreen:
    MoreWeatherScreen:
    TwitterScreen:
    MoreTwitterScreen:
    NotesScreen:
    NewNotesScreen:
    MoreNotesScreen:
    EditNotesScreen:
    RemindersScreen:
    MoreRemindersScreen:
    EditRemindersScreen:
    AlarmsScreen:
    MoreAlarmsScreen:
    EditAlarmsScreen:
    SettingsScreen:

<HomeScreen>
    name: "home"

    BoxLayout:
        Label:
            id: lblName
            text: root.lblName
        Button:
            id: btnWeather
            text: "Weather"
            on_press: app.root.current = "weather"
        Button:
            id: btnTwitter
            text:"Twitter"
            on_press: app.root.current = "twitter"
        Button:
            id: btnNotes
            text:"Notes"
            on_press: app.root.current = "notes"
        Button:
            id: btnReminders
            text:"Reminders"
            on_press: app.root.current = "reminders"
        Button:
            id: btnAlarms
            text:"Alarms"
            on_press: app.root.current = "alarms"
        Button:
            id: btnSettings
            text:"Settings"
            on_press: app.root.current = "settings"

<WeatherScreen>
    name: "weather"
    inputCity: inputCity
    inputCountry: inputCountry

    BoxLayout:
        Label:
            id: lblLocation
            text: root.latestLocation
        Label:
            id: lblWeatherText
            text_size: self.size
            text: root.latestWeatherText

        GridLayout:
            cols: 2
            Label:
                text: "High:"
                halign: "right"
            Label:
                id: lblWeatherHigh
                halign: "left"
                text: root.latestWeatherHigh
            Label:
                text: "Low:"
                halign: "right"
            Label:
                id: lblWeatherLow
                halign: "left"
                text: root.latestWeatherLow

        GridLayout:
            cols: 2
            Label:
                text: "Country:"
            TextInput:
                id: inputCountry
            Label:
                text: "City:"
            TextInput:
                id: inputCity

        Button:
            id: btnUpdateLocation
            text: "Get weather"
            on_press: root.getMoreWeather()
        Button:
            id: btnBack
            text: "Back"
            on_press: app.root.current = "home"

<MoreWeatherScreen>
    name: "moreweather"
    layoutMoreWeather: layoutMoreWeather
    
    ScrollView:
        GridLayout:
            id: layoutMoreWeather
            size_hint_y: None
            height: self.minimum_height
            cols: 1

<TwitterScreen>
    name: "twitter"
    inputTwitterUsername: inputTwitterUsername
    BoxLayout:
        Label:
            id: lblTwitterUsername
            text: root.recentUsername
        Label:
            id: lblRecentTweet
            text: root.recentTweet

        GridLayout:
            cols: 2
            Label:
                text: "@Username:"
            TextInput:
                id: inputTwitterUsername

        Button:
            id: btnSearchTweets
            text: "Search username"
            on_press: root.getMoreTweets()
        Button:
            id: btnBack
            text: "Back"
            on_press: app.root.current = "home"

<MoreTwitterScreen>
    name: "moretwitter"
    layoutMoreTwitter: layoutMoreTwitter

    ScrollView:
        GridLayout:
            size_hint_y: None
            height: self.minimum_height
            id: layoutMoreTwitter
            cols: 1

