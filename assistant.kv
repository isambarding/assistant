<HomeScreen>
    name: "home"

    BoxLayout:
        Label:
            id: labelName
            text: root.labelName
        Button:
            id: buttonWeather
            text: "Weather"
            on_press: app.root.current = "weather"
        Button:
            id: buttonTwitter
            text:"Twitter"
            on_press: app.root.current = "twitter"
        Button:
            id: buttonNotes
            text:"Notes"
            on_press: app.root.current = "notes"
        Button:
            id: buttonReminders
            text:"Reminders"
            on_press: app.root.current = "reminders"
        Button:
            id: buttonAlarms
            text:"Alarms"
            on_press: app.root.current = "alarms"
        Button:
            id: buttonSettings
            text:"Settings"
            on_press: app.root.current = "settings"

<WeatherScreen>
    name: "weather"
    inputCity: inputCity
    inputCountry: inputCountry

    BoxLayout:
        Label:
            id: labelLocation
            text: root.latestLocation
        Label:
            id: labelWeatherText
            text_size: self.size
            text: root.latestWeatherText

        GridLayout:
            cols: 2
            Label:
                text: "High:"
                halign: "right"
            Label:
                id: labelWeatherHigh
                halign: "left"
                text: root.latestWeatherHigh
            Label:
                text: "Low:"
                halign: "right"
            Label:
                id: labelWeatherLow
                halign: "left"
                text: root.latestWeatherLow

        GridLayout:
            cols: 2
            Label:
                text: "Country:"
            TextInput:
                id: inputCountry
            Label:
                text: "City:"
            TextInput:
                id: inputCity

        Button:
            id: buttonUpdateLocation
            text: "Get weather"
            on_press: root.getMoreWeather()
        Button:
            id: buttonBack
            text: "Back"
            on_press: app.root.current = "home"

