MyScreenManager:
    HomeScreen:
    WeatherScreen:
    MoreWeatherScreen:
    TwitterScreen:
    MoreTwitterScreen:
    NotesScreen:
    NewNotesScreen:
    MoreNotesScreen:
    RemindersScreen:
    AlarmsScreen:
    SettingsScreen:

<HomeScreen>
    name: "home"

    BoxLayout:
        Label:
            id: lblName
            text: root.lblName
        Button:
            id: btnWeather
            text: "Weather"
            on_press: app.root.current = "weather"
        Button:
            id: btnTwitter
            text:"Twitter"
            on_press: app.root.current = "twitter"
        Button:
            id: btnNotes
            text:"Notes"
            on_press: app.root.current = "notes"
        Button:
            id: btnReminders
            text:"Reminders"
            on_press: app.root.current = "reminders"
        Button:
            id: btnAlarms
            text:"Alarms"
            on_press: app.root.current = "alarms"
        Button:
            id: btnSettings
            text:"Settings"
            on_press: app.root.current = "settings"

<WeatherScreen>
    name: "weather"
    inputCity: inputCity
    inputCountry: inputCountry

    BoxLayout:
        Label:
            id: lblLocation
            text: root.latestLocation
        Label:
            id: lblWeatherText
            text_size: self.size
            text: root.latestWeatherText

        GridLayout:
            cols: 2
            Label:
                text: "High:"
                halign: "right"
            Label:
                id: lblWeatherHigh
                halign: "left"
                text: root.latestWeatherHigh
            Label:
                text: "Low:"
                halign: "right"
            Label:
                id: lblWeatherLow
                halign: "left"
                text: root.latestWeatherLow

        GridLayout:
            cols: 2
            Label:
                text: "Country:"
            TextInput:
                id: inputCountry
            Label:
                text: "City:"
            TextInput:
                id: inputCity

        Button:
            id: btnUpdateLocation
            text: "Get weather"
            on_press: root.getMoreWeather()
        Button:
            id: btnBack
            text: "Back"
            on_press: app.root.current = "home"

<MoreWeatherScreen>
    name: "moreweather"
    layoutMoreWeather: layoutMoreWeather
    
    ScrollView:
        do_scroll_y: True
        do_scroll_x: False

        GridLayout:
            id: layoutMoreWeather
            cols: 1
            height: self.minimum_height

<TwitterScreen>
    name: "twitter"
    inputTwitterUsername: inputTwitterUsername
    BoxLayout:
        Label:
            id: lblTwitterUsername
            text: root.recentUsername
        Label:
            id: lblRecentTweet
            text: root.recentTweet

        GridLayout:
            cols: 2
            Label:
                text: "@Username:"
            TextInput:
                id: inputTwitterUsername

        Button:
            id: btnSearchTweets
            text: "Search username"
            on_press: root.getMoreTweets()
        Button:
            id: btnBack
            text: "Back"
            on_press: app.root.current = "home"

<MoreTwitterScreen>
    name: "moretwitter"
    lblTweet1: lblTweet1
    lblTweet2: lblTweet2
    lblTweet3: lblTweet3
    lblTweet4: lblTweet4
    lblTweet5: lblTweet5
    lblTweet6: lblTweet6
    lblTweet7: lblTweet7
    lblTweet8: lblTweet8
    lblTweet9: lblTweet9
    lblTweet10: lblTweet10
    lblTwitterUsername: lblTwitterUsername

    ScrollView:
        do_scroll_y: True
        do_scroll_x: False

        BoxLayout:
            size_hint_y: None
            height: "1000dp"
            Label:
                id: lblTwitterUsername
                text: "Tweets by @username:"
            Label:
                id: lblTweet1
            Label:
                id: lblTweet2
            Label:
                id: lblTweet3
            Label:
                id: lblTweet4
            Label:
                id: lblTweet5
            Label:
                id: lblTweet6
            Label:
                id: lblTweet7
            Label:
                id: lblTweet8
            Label:
                id: lblTweet9
            Label:
                id: lblTweet10
            Button:
                id: btnBack
                text: "Back"
                on_press: root.refreshTwitter()

<NotesScreen>
    name: "notes"

    BoxLayout:
        Label:
            id: lblLastNoteTitle
            text: "Most recent note title"
        Label:
            id: lblLastNoteContent
            text: "Most recent note content"
        Button:
            id: btnNewNote
            text: "New note"
            on_press: root.newNote()
        GridLayout:
            cols: 2
            Button:
                id: btnAllNotes
                text: "Notes by time"
                on_press: root.notesByTime()
            Button:
                id: btnAllNotes
                text: "Notes by title"
                on_press: root.notesByTitle()
        Button:
            id: btnBack
            text: "Back"
            on_press: app.root.current = "home"

<NewNotesScreen>
    name: "newnotes"
    inputNewNoteTitle: inputNewNoteTitle
    inputNewNoteContent: inputNewNoteContent

    BoxLayout:
        GridLayout:
            cols: 2
            Label:
                id: lblNewNoteTitle
                text: "Title:"
            TextInput:
                id: inputNewNoteTitle

        Label:
            id: lblNewNoteTitle
            text: "Content:"
        TextInput:
            id: inputNewNoteContent
            multiline: True
        Button:
            id: btnCreateNote
            text: "Create"
            on_press: root.createNote()
        Button:
            id: btnBack
            text: "Discard"
            on_press: app.root.current = "notes"

<MoreNotesScreen>
    name: "morenotes"
    layoutMoreNotes: layoutMoreNotes
    #accordionNotes: accordionNotes
    ScrollView:
        #do_scroll_y: True
        #do_scroll_x: False

        GridLayout:
            id: layoutMoreNotes
            cols: 1
            #size_hint_y: None
            height: self.minimum_height

            #height: self.height


<RemindersScreen>
    name: "reminders"

    BoxLayout:
        Label:
            id: lblLastNoteTitle
            text: "Most recent reminder title"
        Label:
            id: lblLastNoteContent
            text: "Most recent reminder content"
        Button:
            id: btnNewReminder
            text: "New reminder"
        Button:
            id: btnAllNotes
            text: "All reminders"
        Button:
            id: btnBack
            text: "Back"
            on_press: app.root.current = "home"

<AlarmsScreen>
    name: "alarms"

    BoxLayout:
        Label:
            id: lblLastAlarmTitle
            text: "Most recent alarm title"
        Label:
            id: lblLastAlarmTime
            text: "Most recent alarm time"
        Button:
            id: btnNewAlarm
            text: "New alarm"
        Button:
            id: btnAllAlarms
            text: "All alarms"
        Button:
            id: btnBack
            text: "Back"
            on_press: app.root.current = "home"

<SettingsScreen>
    name: "settings"
    inputNewName: inputNewName
    inputNewCountry: inputNewCountry
    inputNewCity: inputNewCity

    BoxLayout:
        Label:
            text: "Changes will take effect after restart"
        GridLayout:
            cols: 2
            Label:
                text: "Name:"
            TextInput:
                id: inputNewName

        Button:
            id: btnChangeName
            text: "Change name"
            on_press: root.changeName()

        GridLayout:
            cols: 2
            Label:
                text: "Country:"
            TextInput:
                id: inputNewCountry
            Label:
                text: "City:"
            TextInput:
                id: inputNewCity

        Button:
            id: btnChangeLocation
            text: "Change location"
            on_press: root.changeLocation()
        Button:
            id: btnRestartSetup
            text: "Restart setup"
        Button:
            id: btnBack
            text: "Back"
            on_press: app.root.current = "home"

<Label>
    text_size: self.size
    padding_x: "20dp"
    padding_y: "20dp"
    halign: "center"
    valign: "center"
    font_size: "15dp"
    #size_hint: None, None

<BoxLayout>
    orientation: "vertical"

<TextInput>
    multiline: False